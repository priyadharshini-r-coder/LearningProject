<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_uber_clone_driver"
        tools:context=".uberclone.activities.WelcomeActivity">

        <Button
            android:id="@+id/buttonCustomer"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/i_m_a_customer"
            android:backgroundTint="@color/grey_80"
            app:layout_constraintBottom_toTopOf="@+id/buttonDriver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />

        <Button
            android:id="@+id/buttonDriver"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/grey_80"
            android:text="@string/i_m_a_driver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.671" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>